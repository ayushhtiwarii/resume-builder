<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume Template 1</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      color: #333;
      padding: 20px;
      max-width: 800px;
      margin: auto;
    }
    .resume-container {
      display: flex;
      border: 1px solid #ddd;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .sidebar {
      background-color: #00bcd4;
      color: #fff;
      width: 30%;
      padding: 20px;
      text-align: center;
    }
    .profile-pic {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      margin: 0 auto 10px;
    }
    .main-content {
      width: 70%;
      padding: 20px;
      background-color: #f9f9f9;
    }
    h1, h2, h3 {
      margin-bottom: 0.5em;
      color: #333;
    }
    ul {
      list-style-type: disc;
      padding-left: 20px;
    }
    .print-button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #00bcd4;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .print-button:hover {
      background-color: #0097a7;
    }
    @media print {
      .print-button {
        display: none;
      }
    }
    a {
      color: white;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="resume-container">
    <div class="sidebar">
      <% if (data.profilePicUrl) { %>
        <img src="<%= data.profilePicUrl %>" alt="Profile Picture" class="profile-pic">
      <% } %>
      <h2><%= data.name %></h2>
      <p><%= data.email %></p>
      <p><%= data.address %></p>
      <hr>

      <% if (data.linkedin) { %><p><a href="<%= data.linkedin %>" target="_blank">LinkedIn</a></p><% } %>
      <% if (data.leetcode) { %><p><a href="<%= data.leetcode %>" target="_blank">LeetCode</a></p><% } %>
      <% if (data.hackerrank) { %><p><a href="<%= data.hackerrank %>" target="_blank">HackerRank</a></p><% } %>
    </div>

    <div class="main-content">
      <h1><%= data.name %></h1>
      <hr>

      <h3>Objective</h3>
      <p><%= data.objective %></p>

      <h3>Work Experience</h3>
      <p><%= data.workExperience %></p>

      <h3>Education</h3>
      <ul>
        <% data.education.split(',').forEach(edu => { %>
          <li><%= edu.trim() %></li>
        <% }); %>
      </ul>

      <h3>Skills</h3>
      <ul>
        <% data.skills.split(',').forEach(skill => { %>
          <li><%= skill.trim() %></li>
        <% }); %>
      </ul>
      <!-- Add this below Skills section -->
      <h3>Projects</h3>
      <ul>
        <% if (data.projects) { %>
          <% data.projects.split(',').forEach(project => { %>
            <li><%= project.trim() %></li>
          <% }); %>
        <% } else { %>
          <li>No projects listed.</li>
        <% } %>
      </ul>


    </div>
  </div>

  <button class="print-button" onclick="window.print()">Print Resume</button>

</body>
</html>
